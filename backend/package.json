{
  "name": "help-savta-backend",
  "version": "1.0.0",
  "description": "Backend for Technical Help Volunteer Platform - עזרה טכנית בהתנדבות",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon src/server.ts",
    "build": "tsc && cp -r src/templates dist/",
    "start": "node dist/server.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:migrate:reset": "prisma migrate reset",
    "db:studio": "prisma studio",
    "db:seed": "node prisma/seed-wrapper.js",
    "db:setup": "npm run db:generate && npm run db:push && npm run db:seed",
    "db:backup": "ts-node scripts/backup-restore.ts backup",
    "db:restore": "ts-node scripts/backup-restore.ts restore",
    "db:monitor": "ts-node scripts/db-monitor.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:email": "ts-node ../tests/backend/email.test.ts",
    "clean": "rm -rf dist node_modules coverage",
    "typecheck": "tsc --noEmit"
  },
  "prisma": {
    "seed": "node prisma/seed-wrapper.js"
  },
  "keywords": [
    "volunteer",
    "technical-help",
    "elderly",
    "community"
  ],
  "author": "Tech Help Volunteers",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "@sendgrid/mail": "^8.1.5",
    "@types/nodemailer": "^6.4.17",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.17.3",
    "handlebars": "^4.7.8",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "nodemailer": "^7.0.3",
    "pg": "^8.11.3",
    "prisma": "^5.7.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.10",
    "@types/handlebars": "^4.0.40",
    "@types/jest": "^29.5.8",
    "@types/pg": "^8.10.9",
    "@types/sendgrid": "^2.0.31",
    "@types/supertest": "^2.0.16",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3"
  }
}
