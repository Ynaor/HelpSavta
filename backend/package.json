{
  "name": "Help-Savta-backend",
  "version": "1.0.0",
  "description": "Backend for Technical Help Volunteer Platform - עזרה טכנית בהתנדבות",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:migrate:reset": "prisma migrate reset",
    "db:studio": "prisma studio",
    "db:seed": "ts-node prisma/seed.ts",
    "db:use-sqlite": "node scripts/use-sqlite.js && npm run db:generate",
    "db:use-postgresql": "node scripts/use-postgresql.js && npm run db:generate",
    "db:setup-sqlite": "npm run db:use-sqlite && npm run db:push",
    "db:setup-postgresql": "npm run db:use-postgresql && npm run db:push",
    "migrate:postgresql": "ts-node scripts/migrate-to-postgresql.ts",
    "backup-restore": "ts-node scripts/backup-restore.ts",
    "production:setup": "ts-node scripts/production-setup.ts",
    "db:monitor": "ts-node scripts/db-monitor.ts"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "keywords": [
    "volunteer",
    "technical-help",
    "elderly",
    "community"
  ],
  "author": "Tech Help Volunteers",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "@types/nodemailer": "^6.4.17",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.17.3",
    "handlebars": "^4.7.8",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "nodemailer": "^7.0.3",
    "pg": "^8.11.3",
    "prisma": "^5.7.1",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.10",
    "@types/handlebars": "^4.0.40",
    "@types/node": "^20.10.5",
    "@types/pg": "^8.10.9",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
