# Production Environment Configuration
NODE_ENV=production

# Server Configuration
PORT=3001
HOST=0.0.0.0

# PostgreSQL Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/helpsavta_db"
# For cloud providers, use their connection string format:
# DATABASE_URL="postgresql://username:password@host:port/database?sslmode=require"

# Database Pool Configuration
DB_POOL_MIN=2
DB_POOL_MAX=20
DB_POOL_ACQUIRE_TIMEOUT=60000
DB_POOL_IDLE_TIMEOUT=10000

# Redis Configuration (recommended for production session store)
REDIS_URL="redis://localhost:6379"
# For cloud Redis:
# REDIS_URL="redis://username:password@host:port"

# Session Configuration
# CRITICAL: Generate a strong, unique secret for production!
SESSION_SECRET=CHANGE-THIS-TO-A-STRONG-32-PLUS-CHARACTER-SECRET-FOR-PRODUCTION
SESSION_MAX_AGE=86400000

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
FRONTEND_URL=https://yourdomain.com
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Admin Configuration
# SECURITY: Change these default credentials immediately!
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=CHANGE-THIS-SECURE-PASSWORD

# Email Configuration (SMTP)
EMAIL_HOST=smtp.your-email-provider.com
EMAIL_PORT=587
EMAIL_USER=your-email@yourdomain.com
EMAIL_PASS=your-app-specific-password
EMAIL_FROM=noreply@yourdomain.com
EMAIL_SECURE=true

# SMS Configuration (optional)
SMS_API_KEY=your-sms-service-api-key
SMS_PROVIDER=twilio

# Logging Configuration
LOG_LEVEL=info

# Health Check Configuration
HEALTH_CHECK_PATH=/health

# Cloud Provider Specific (uncomment as needed)

# AWS RDS PostgreSQL
# DATABASE_URL="postgresql://username:password@your-rds-endpoint.region.rds.amazonaws.com:5432/helpsavta_db"

# Google Cloud SQL PostgreSQL
# DATABASE_URL="postgresql://username:password@/helpsavta_db?host=/cloudsql/project:region:instance"

# Azure Database for PostgreSQL
# DATABASE_URL="postgresql://username:password@server.postgres.database.azure.com:5432/helpsavta_db?sslmode=require"

# Heroku PostgreSQL (automatically provided)
# DATABASE_URL will be set automatically by Heroku

# Redis Cloud Providers
# REDIS_URL="redis://username:password@host:port" # Redis Cloud
# REDIS_URL="rediss://username:password@host:port" # Redis with TLS