# Environment
NODE_ENV=development

# Server Configuration
PORT=3001
HOST=0.0.0.0

# Database Configuration
# Development (SQLite) - for local development without Docker
DATABASE_URL="file:./dev.db"

# Database Pool Configuration (for PostgreSQL when used)
DB_POOL_MIN=2
DB_POOL_MAX=20
DB_POOL_ACQUIRE_TIMEOUT=60000
DB_POOL_IDLE_TIMEOUT=10000

# Session Configuration
SESSION_SECRET=development-session-secret-key-min-32-chars-for-local-dev
SESSION_MAX_AGE=86400000

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
FRONTEND_URL=http://localhost:5173

# Admin Configuration
# SECURITY: These are development credentials only!
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=admin123dev

# Email Configuration (for development - using ethereal for testing)
EMAIL_HOST=smtp.ethereal.email
EMAIL_PORT=587
EMAIL_USER=ethereal.user@ethereal.email
EMAIL_PASS=ethereal.pass
EMAIL_FROM=noreply@helpsavta-dev.com
EMAIL_SECURE=false

# SMS Configuration (optional)
# SMS_API_KEY=your-sms-service-api-key
# SMS_PROVIDER=twilio

# Logging Configuration
LOG_LEVEL=info

# Health Check Configuration
HEALTH_CHECK_PATH=/health