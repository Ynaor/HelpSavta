# Environment
NODE_ENV=production

# Server Configuration
PORT=3001
HOST=0.0.0.0

# Database Configuration (PostgreSQL for production)
DATABASE_URL="postgresql://username:password@host:port/database?schema=public&connection_limit=20&pool_timeout=20"

# Database Pool Configuration
DB_POOL_MIN=5
DB_POOL_MAX=50
DB_POOL_ACQUIRE_TIMEOUT=60000
DB_POOL_IDLE_TIMEOUT=10000

# Redis Configuration (for production session store)
REDIS_URL="redis://username:password@host:port"

# Session Configuration
SESSION_SECRET=your-super-secure-session-key-change-this-in-production-min-32-chars
SESSION_MAX_AGE=86400000

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
FRONTEND_URL=https://your-domain.com
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Admin Configuration
# SECURITY: Use strong, unique credentials for production!
DEFAULT_ADMIN_USERNAME=your-production-admin-username
DEFAULT_ADMIN_PASSWORD=your-very-secure-admin-password

# SendGrid Email Configuration (Primary)
SENDGRID_API_KEY=SG.your-production-sendgrid-api-key
EMAIL_FROM=noreply@helpsavta.co.il
EMAIL_FROM_NAME=Help Savta
EMAIL_REPLY_TO=support@helpsavta.co.il

# SMTP Fallback Configuration (Optional - used if SendGrid fails)
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_USER=apikey
EMAIL_PASS=SG.your-sendgrid-api-key
EMAIL_SECURE=true

# Support Contact Information
SUPPORT_EMAIL=support@helpsavta.co.il
SUPPORT_PHONE=03-1234567

# Logging Configuration
LOG_LEVEL=warn

# Health Check Configuration
HEALTH_CHECK_PATH=/health

# Azure Application Insights (if using Azure)
# APPLICATIONINSIGHTS_CONNECTION_STRING=your-app-insights-connection-string

# Email Template Configuration
EMAIL_TEMPLATE_BASE_URL=https://your-domain.com

# Feature Flags
ENABLE_EMAIL_VERIFICATION=true
ENABLE_SMS_NOTIFICATIONS=false

# Monitoring and Analytics
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ERROR_TRACKING=true

# Security Headers
ENABLE_SECURITY_HEADERS=true
ENABLE_RATE_LIMITING=true

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Cache Configuration
CACHE_TTL=3600
ENABLE_RESPONSE_CACHING=true