# Environment
NODE_ENV=production

# Server Configuration
PORT=3001
HOST=0.0.0.0

# Database Configuration (PostgreSQL for production)
DATABASE_URL="postgresql://username:password@host:port/database?schema=public&connection_limit=20&pool_timeout=20"

# Database Pool Configuration
DB_POOL_MIN=5
DB_POOL_MAX=50
DB_POOL_ACQUIRE_TIMEOUT=60000
DB_POOL_IDLE_TIMEOUT=10000

# Redis Configuration (for production session store)
REDIS_URL="redis://username:password@host:port"

# Session Configuration - Using Azure KeyVault
SESSION_SECRET=@Microsoft.KeyVault(SecretUri=https://helpsavta-production-kv.vault.azure.net/secrets/session-secret/)
SESSION_MAX_AGE=86400000

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
FRONTEND_URL=https://your-domain.com
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Admin Configuration - Using Azure KeyVault
# SECURITY: Use strong, unique credentials for production!
DEFAULT_ADMIN_USERNAME=@Microsoft.KeyVault(SecretUri=https://helpsavta-production-kv.vault.azure.net/secrets/admin-username/)
DEFAULT_ADMIN_PASSWORD=@Microsoft.KeyVault(SecretUri=https://helpsavta-production-kv.vault.azure.net/secrets/admin-password/)

# SendGrid Email Configuration (Primary) - Using Azure KeyVault References
SENDGRID_API_KEY=@Microsoft.KeyVault(SecretUri=https://helpsavta-production-kv.vault.azure.net/secrets/sendgrid-api-key/)
EMAIL_FROM=@Microsoft.KeyVault(SecretUri=https://helpsavta-production-kv.vault.azure.net/secrets/email-from/)
EMAIL_FROM_NAME=Help Savta
EMAIL_REPLY_TO=support@helpsavta.com

# SMTP Fallback Configuration (Optional - using KeyVault references)
EMAIL_HOST=@Microsoft.KeyVault(SecretUri=https://helpsavta-production-kv.vault.azure.net/secrets/email-host/)
EMAIL_PORT=@Microsoft.KeyVault(SecretUri=https://helpsavta-production-kv.vault.azure.net/secrets/email-port/)
EMAIL_USER=@Microsoft.KeyVault(SecretUri=https://helpsavta-production-kv.vault.azure.net/secrets/email-user/)
EMAIL_PASS=@Microsoft.KeyVault(SecretUri=https://helpsavta-production-kv.vault.azure.net/secrets/sendgrid-api-key/)
EMAIL_SECURE=true

# Support Contact Information
SUPPORT_EMAIL=support@helpsavta.com
SUPPORT_PHONE=03-1234567

# Logging Configuration
LOG_LEVEL=warn

# Health Check Configuration
HEALTH_CHECK_PATH=/health

# Azure Application Insights (if using Azure)
# APPLICATIONINSIGHTS_CONNECTION_STRING=your-app-insights-connection-string

# Email Template Configuration
EMAIL_TEMPLATE_BASE_URL=https://helpsavta.com

# Feature Flags
ENABLE_EMAIL_VERIFICATION=true
ENABLE_SMS_NOTIFICATIONS=false

# Monitoring and Analytics
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ERROR_TRACKING=true

# Security Headers
ENABLE_SECURITY_HEADERS=true
ENABLE_RATE_LIMITING=true

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Cache Configuration
CACHE_TTL=3600
ENABLE_RESPONSE_CACHING=true